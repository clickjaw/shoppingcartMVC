
@model SmallCartViewModel


<div class="smallCartBox">
@if (Model != null)
{
    <p>Items in cart:     <span class="badge badge-#d801a4
">@Model.NumberOfItems</span></p>
    <p>Total: <b>@Model.TotalAmount.ToString("C2")</b></p>
    <a class="btn btnViewCart mb-2" asp-controller="Cart" asp-action="Index">View Cart</a>
    <a class="btn btnClearCart mb-2" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
}
else
{
    <p class="lead m-0">Your cart is empty</p>
}
</div>

