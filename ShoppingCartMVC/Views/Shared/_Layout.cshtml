<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShoppingCartMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShoppingCartMVC.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Abel&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-#0F0C1C box-shadow mb-3">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between navBarDiv">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="btn btnPink" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="btn btnPink" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btnPink" asp-area="" asp-controller="Account" asp-action="Logout">Log out</a>
                            </li>
                            <li>
                                <div class="userNameNavBar">
                                    Hello, @User.Identity.Name.ToUpper()!
                                </div>
                            </li>
                            @*@if (User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <li class="nav-item">
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
                </li>
            }*@
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btnPink" asp-controller="Account" asp-action="Login">Log in</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btnPink" asp-controller="Account" asp-action="Create">Create Account</a>
                            </li>
                        }
                       

                    </ul>
                </div>
            </div>
            

            <div class="navBarLogo">
                <img src="/Media/retro-gaming-logo.jpg"/>
            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-3">
                    <vc:categories/>

                    <div class="smallCartBox mt-3 p-3 text-white">
                        <vc:small-cart/>
                    </div>
                </div>
                <div class="col">
                    <partial name="_NotificationPartial"/>
                    @RenderBody()


                </div>
            </div>
        </main>
    </div>

    <footer class="myFooter text-muted">
        <div class="container">
            &copy; 2022 - clickjaw - <a href="tylermorgan.netlify.app">tylermorgan.dev</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

